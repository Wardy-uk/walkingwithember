---
import "../../styles/global.css";
export const prerender = true;
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@500;700&family=Fraunces:opsz,wght@9..144,500;9..144,700&family=Manrope:wght@400;500;700&display=swap" rel="stylesheet" />
    <title>Walking with Ember | Admin</title>
    <style>
      .admin-wrap {
        width: min(var(--max), calc(100% - 2rem));
        margin: 1rem auto;
        display: grid;
        gap: 0.5rem;
      }
      .admin-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 0.45rem;
        flex-wrap: wrap;
      }
      .admin-brand {
        text-decoration: none;
        color: #3d2718;
      }
      .admin-brand strong {
        font-family: "Unbounded", "Segoe UI", sans-serif;
        text-transform: uppercase;
        letter-spacing: 0.02em;
      }
      .admin-brand span {
        display: block;
        color: var(--muted);
        font-size: 0.82rem;
        margin-top: 0;
        line-height: 1.1;
      }
      .admin-links {
        display: flex;
        gap: 0.4rem;
        flex-wrap: wrap;
        align-items: center;
      }
      .admin-links a {
        display: inline-block;
      }
      .admin-combined {
        display: grid;
        gap: 0.4rem;
      }
      .admin-combined h1,
      .admin-combined p {
        margin: 0;
      }
      .identity-row {
        display: flex;
        gap: 0.4rem;
        flex-wrap: wrap;
        align-items: center;
        margin-top: 0.1rem;
      }
      #identity-status {
        color: var(--muted);
        font-weight: 600;
        line-height: 1;
      }
    </style>
  </head>
  <body>
    <main class="admin-wrap">
      <section class="card admin-combined">
        <div class="admin-top">
          <a class="admin-brand" href="/">
            <strong>Walking with Ember</strong>
            <span>Admin tools and publishing</span>
          </a>
          <div class="admin-links">
            <a class="button ghost-dark" href="/">View site</a>
            <a class="button" href="/admin/ai-walk/">AI Walk Creator</a>
          </div>
        </div>
        <h1>CMS Admin</h1>
        <p class="muted">Sign in with Netlify Identity to manage content or use the AI walk workflow.</p>
        <div class="identity-row">
          <button id="identity-login" type="button">Log in</button>
          <button id="identity-signup" type="button">Sign up</button>
          <button id="identity-recovery" type="button">Recover password</button>
          <span id="identity-status">Loading login widget...</span>
        </div>
      </section>
    </main>

    <script src="https://unpkg.com/netlify-identity-widget@1.9.2/build/netlify-identity-widget.js"></script>
    <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
    <script is:inline>
      const statusEl = document.getElementById("identity-status");

      function setStatus(message, color) {
        if (!statusEl) return;
        statusEl.textContent = message;
        statusEl.style.color = color || "#7c6654";
      }

      function bindIdentity(identity) {
        identity.init();
        setStatus("Identity ready", "#5b7f3f");

        document.getElementById("identity-login")?.addEventListener("click", () => identity.open("login"));
        document.getElementById("identity-signup")?.addEventListener("click", () => identity.open("signup"));
        document.getElementById("identity-recovery")?.addEventListener("click", () => identity.open("recovery"));

        const hash = window.location.hash || "";
        if (hash.includes("invite_token")) {
          identity.open("signup");
        } else if (hash.includes("recovery_token")) {
          identity.open("recovery");
        }

        identity.on("init", (user) => {
          if (!user) {
            identity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }

      function waitForIdentity(triesLeft) {
        const identity = window.netlifyIdentity;
        if (identity) {
          bindIdentity(identity);
          return;
        }
        if (triesLeft <= 0) {
          setStatus("Identity widget unavailable. Disable blockers and refresh.", "#b00020");
          return;
        }
        setTimeout(() => waitForIdentity(triesLeft - 1), 250);
      }

      waitForIdentity(40);
    </script>
  </body>
</html>
