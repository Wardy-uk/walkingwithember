---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import CookieBanner from "../components/CookieBanner.astro";

interface Props {
  title: string;
  description: string;
  regions?: string[];
  siteName: string;
  tagline: string;
}

const { title, description, regions = [], siteName, tagline } = Astro.props;
const canonical = new URL(Astro.url.pathname, Astro.site).toString();
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@500;700&family=Fraunces:opsz,wght@9..144,500;9..144,700&family=Manrope:wght@400;500;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content="/images/og-default.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" href="/images/favicon.svg" type="image/svg+xml" />
  </head>
  <body>
    <SiteHeader siteName={siteName} tagline={tagline} regions={regions} />
    <main>
      <slot />
    </main>
    <SiteFooter />
    <CookieBanner />
    <div id="identity-status" class="identity-status" data-state="checking">Admin: checking...</div>

    <script src="https://unpkg.com/netlify-identity-widget@1.9.2/build/netlify-identity-widget.js" defer></script>
    <script is:inline>
      (() => {
        const identityStatus = document.getElementById("identity-status");
        const setIdentityStatus = (label, state, user = null, available = true) => {
          if (identityStatus) {
            identityStatus.textContent = `Admin: ${label}`;
            identityStatus.dataset.state = state;
          }
          window.__wwIdentityUser = user;
          window.dispatchEvent(new CustomEvent("ww-identity-change", { detail: { user, available } }));
        };

        const bindIdentity = (identity) => {
          if (!identity || typeof identity.init !== "function") {
            setIdentityStatus("identity unavailable", "unavailable", null, false);
            return;
          }

          try {
            identity.on("init", (user) => {
              if (!user && window.location.hash.includes("invite_token")) {
                identity.open("signup");
              }
              setIdentityStatus(user ? "logged in" : "logged out", user ? "in" : "out", user, true);
            });

            identity.on("login", (user) => {
              setIdentityStatus("logged in", "in", user, true);
            });

            identity.on("logout", () => {
              setIdentityStatus("logged out", "out", null, true);
            });

            identity.init();
            const currentUser = identity.currentUser?.();
            setIdentityStatus(currentUser ? "logged in" : "logged out", currentUser ? "in" : "out", currentUser || null, true);
          } catch {
            setIdentityStatus("identity error", "error", null, false);
          }
        };

        const tryLoadIdentity = (attempt = 0) => {
          const identity = window.netlifyIdentity;
          if (identity) {
            bindIdentity(identity);
            return;
          }

          if (attempt >= 20) {
            setIdentityStatus("identity unavailable", "unavailable", null, false);
            return;
          }

          window.setTimeout(() => tryLoadIdentity(attempt + 1), 150);
        };

        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", () => tryLoadIdentity(0), { once: true });
        } else {
          tryLoadIdentity(0);
        }
      })();
    </script>

    <script type="application/ld+json" is:inline define:vars={{ title, description, canonical }}>
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: title,
        description,
        url: canonical
      })}
    </script>
  </body>
</html>


