---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import CookieBanner from "../components/CookieBanner.astro";

interface Props {
  title: string;
  description: string;
  regions?: string[];
  siteName: string;
  tagline: string;
}

const { title, description, regions = [], siteName, tagline } = Astro.props;
const canonical = new URL(Astro.url.pathname, Astro.site).toString();
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@500;700&family=Fraunces:opsz,wght@9..144,500;9..144,700&family=Manrope:wght@400;500;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content="/images/og-default.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" href="/images/favicon.svg" type="image/svg+xml" />
  </head>
  <body>
    <SiteHeader siteName={siteName} tagline={tagline} regions={regions} />
    <main>
      <slot />
    </main>
    <SiteFooter />
    <CookieBanner />
    <div id="identity-status" class="identity-status" data-state="checking">Admin: checking...</div>

    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script is:inline>
      const identityStatus = document.getElementById("identity-status");
      const setIdentityStatus = (label, state, user = null, available = true) => {
        if (identityStatus) {
          identityStatus.textContent = `Admin: ${label}`;
          identityStatus.dataset.state = state;
        }
        window.__wwIdentityUser = user;
        window.dispatchEvent(new CustomEvent("ww-identity-change", { detail: { user, available } }));
      };

      let identityAttached = false;

      const attachIdentity = () => {
        if (identityAttached || !window.netlifyIdentity) return;
        identityAttached = true;

        try {
          window.netlifyIdentity.on("init", (user) => {
            if (!user && window.location.hash.includes("invite_token")) {
              window.netlifyIdentity.open("signup");
            }
            setIdentityStatus(user ? "logged in" : "logged out", user ? "in" : "out", user, true);
          });

          window.netlifyIdentity.on("login", (user) => {
            setIdentityStatus("logged in", "in", user, true);
          });

          window.netlifyIdentity.on("logout", () => {
            setIdentityStatus("logged out", "out", null, true);
          });

          window.netlifyIdentity.init();

          const currentUser = window.netlifyIdentity.currentUser?.();
          if (currentUser) {
            setIdentityStatus("logged in", "in", currentUser, true);
          } else {
            setIdentityStatus("logged out", "out", null, true);
          }
        } catch {
          setIdentityStatus("identity error", "error", null, false);
        }
      };

      const waitForIdentity = (attempt = 0) => {
        if (window.netlifyIdentity) {
          attachIdentity();
          return;
        }

        if (attempt < 40) {
          setIdentityStatus("checking...", "checking", null, false);
          setTimeout(() => waitForIdentity(attempt + 1), 250);
        } else {
          setIdentityStatus("identity unavailable", "unavailable", null, false);
        }
      };

      waitForIdentity();
    </script>

    <script type="application/ld+json" is:inline define:vars={{ title, description, canonical }}>
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: title,
        description,
        url: canonical
      })}
    </script>
  </body>
</html>

