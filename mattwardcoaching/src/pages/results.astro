---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Matt Ward Coaching | Results" description="Client transformation examples and testimonials from Matt Ward Coaching.">
  <div class="container page-grid">
    <section class="split">
      <article class="card">
        <p class="kicker">Results</p>
        <h1>Client Progress</h1>
        <p class="page-intro">Placeholders below will be replaced by selected Instagram transformations and check-in screenshots.</p>
        <div class="grid-2">
          <img src="/images/result-1.svg" alt="Client result placeholder one" />
          <img src="/images/result-2.svg" alt="Client result placeholder two" />
          <img src="/images/result-3.svg" alt="Client result placeholder three" />
          <img src="/images/result-4.svg" alt="Client result placeholder four" />
        </div>
      </article>
      <aside class="card">
        <h2>Testimonials</h2>
        <div class="quote-list">
          <blockquote>"I lost body fat and felt stronger every week."</blockquote>
          <blockquote>"Simple plan, clear expectations, consistent progress."</blockquote>
          <blockquote>"The accountability made the biggest difference."</blockquote>
        </div>
      </aside>
    </section>
  </div>
</BaseLayout>
